local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local UserInputService = game:GetService("UserInputService")

local PlayerGui = Player:WaitForChild("PlayerGui")
local hubGui = Instance.new("ScreenGui", PlayerGui)
local hubMenu = Instance.new("Frame", hubGui)
hubMenu.Size = UDim2.new(0.2, 0, 0.5, 0)

local exitButton = Instance.new("TextButton", hubMenu)
exitButton.Text = "X"
exitButton.ZIndex = 2
exitButton.Size = UDim2.new(0.1, 0, 0.1, 0)
exitButton.Position = UDim2.new(0.9, -exitButton.Size.X.Offset, 0, 0)

local dragging
local dragInput
local dragStart
local startPos

exitButton.Activated:Connect(function()
    hubGui:Destroy()
end)

local function update(input)
    local delta = input.Position - dragStart
    hubMenu.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

hubMenu.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
        dragging = true
        dragStart = input.Position
        startPos = hubMenu.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

hubMenu.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
        dragInput = input
    end
end)

UserInputService.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)
